@page "{characterID}"
@model S2IndividualProjectDnDPrototype.Pages.NewCharacterPages.EditNewCharacterModel

<h2>Edit @Model.NewCharacter.Name</h2>

<form method="post">
    <input type="hidden" asp-for="NewCharacter.Id" />
    <input type="hidden" asp-for="NewCharacter.UserId" />
    <input type="hidden" asp-for="NewCharacter.CampaignId" />
    <input type="hidden" asp-for="NewCharacter.Name" />
    <input type="hidden" asp-for="NewCharacter.maxHealth" />
    <input type="hidden" asp-for="NewCharacter.maxStrength" />
    <input type="hidden" asp-for="NewCharacter.maxDexterity" />
    <input type="hidden" asp-for="NewCharacter.maxWill" />
    <input type="hidden" asp-for="NewCharacter.maxSpirit" />

    <div class="row">
        <div class="col-md-6">
            <h4>Current Stats</h4>
            <div class="mb-3 form-group">
                <label asp-for="NewCharacter.currentHealth">Current Health (Max: @Model.NewCharacter.maxHealth)</label>
                <input type="number" asp-for="NewCharacter.currentHealth" min="0" max="@Model.NewCharacter.maxHealth" />
            </div>
            <div class="mb-3 form-group">
                <label asp-for="NewCharacter.currentStrength">Current Strength (Max: @Model.NewCharacter.maxStrength)</label>
                <input type="number" asp-for="NewCharacter.currentStrength" min="0" max="@Model.NewCharacter.maxStrength" />
            </div>
            <div class="mb-3 form-group">
                <label asp-for="NewCharacter.currentDexterity">Current Dexterity (Max: @Model.NewCharacter.maxDexterity)</label>
                <input type="number" asp-for="NewCharacter.currentDexterity" min="0" max="@Model.NewCharacter.maxDexterity" />
            </div>
            <div class="mb-3 form-group">
                <label asp-for="NewCharacter.currentWill">Current Will (Max: @Model.NewCharacter.maxWill)</label>
                <input type="number" asp-for="NewCharacter.currentWill" min="0" max="@Model.NewCharacter.maxWill" />
            </div>
            <div class="mb-3 form-group">
                <label asp-for="NewCharacter.currentSpirit">Current Spirit (Max: @Model.NewCharacter.maxSpirit)</label>
                <input type="number" asp-for="NewCharacter.currentSpirit" min="0" max="@Model.NewCharacter.maxSpirit" />
            </div>
            <div class="mb-3 form-group">
                <label asp-for="NewCharacter.Armor">Armor</label>
                <input type="number" asp-for="NewCharacter.Armor" />
            </div>
        </div>

        <div class="col-md-6">
            <h4>Equipment</h4>
            <div class="mb-3 form-group">
                <label asp-for="NewCharacter.LeftHand">Left Hand</label>
                <input type="text" asp-for="NewCharacter.LeftHand" />
            </div>
            <div class="mb-3 form-group">
                <label asp-for="NewCharacter.RightHand">Right Hand</label>
                <input type="text" asp-for="NewCharacter.RightHand" />
            </div>
            <div class="mb-3 form-group">
                <label asp-for="NewCharacter.Body1">Body Slot 1</label>
                <input type="text" asp-for="NewCharacter.Body1" />
            </div>
            <div class="mb-3 form-group">
                <label asp-for="NewCharacter.Body2">Body Slot 2</label>
                <input type="text" asp-for="NewCharacter.Body2" />
            </div>

            <h4 class="mt-4">Backpack</h4>
            <div class="mb-3 form-group">
                <label asp-for="NewCharacter.Backpack1">Backpack Slot 1</label>
                <input type="text" asp-for="NewCharacter.Backpack1" />
            </div>
            <div class="mb-3 form-group">
                <label asp-for="NewCharacter.Backpack2">Backpack Slot 2</label>
                <input type="text" asp-for="NewCharacter.Backpack2" />
            </div>
            <div class="mb-3 form-group">
                <label asp-for="NewCharacter.Backpack3">Backpack Slot 3</label>
                <input type="text" asp-for="NewCharacter.Backpack3" />
            </div>
            <div class="mb-3 form-group">
                <label asp-for="NewCharacter.Backpack4">Backpack Slot 4</label>
                <input type="text" asp-for="NewCharacter.Backpack4" />
            </div>
            <div class="mb-3 form-group">
                <label asp-for="NewCharacter.Backpack5">Backpack Slot 5</label>
                <input type="text" asp-for="NewCharacter.Backpack5" />
            </div>
            <div class="mb-3 form-group">
                <label asp-for="NewCharacter.Backpack6">Backpack Slot 6</label>
                <input type="text" asp-for="NewCharacter.Backpack6" />
            </div>

            <div class="mb-3 form-group">
                <label asp-for="NewCharacter.Notes">Notes</label>
                <textarea asp-for="NewCharacter.Notes" rows="4"></textarea>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <input type="submit" class="btn btn-primary">
        <a href="/NewNewCharacterPages/NewNewCharacterPage/@Model.NewCharacter.Id" class="btn btn-secondary">Cancel</a>
    </div>
</form> 