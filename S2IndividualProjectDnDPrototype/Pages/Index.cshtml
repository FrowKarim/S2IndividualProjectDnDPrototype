@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome, this is my landing page</h1>
    <p>this page is a work in progress <a href="https://learn.microsoft.com/aspnet/core">To go to asp.net core documentation</a>.</p>
</div>

<p>@ViewData["message"] </p>

<div class="container center ">
    <table class="Table Center">
        <thead>
            <td>Name</td>
            <td>Age</td>
            <td>Gender</td>
        </thead>
        @foreach (Models.Person pers in Model.People)
        {
            <tr>
                <td>@pers.Name</td>
                <td>@pers.Age</td>
                <td>@pers.Gender</td>
            </tr>
        }
    </table>
</div>

<div class="container center border-light " style="border-color: white; border-width: 2px;">
    @foreach (Models.Person pers in Model.People)
    {
        <div class="card text-light text-center container-fluid" style="width:400px; margin:0.5em; background-color:var(--bg); ">
            <div>
        
        
                <h4 class="card-title"> @pers.Name    </h4>
                <p class="card-text"> @pers.Name is @pers.Age years old and is a @pers.Gender.</p>
                <p class="text-opacity-75 card-text"> @pers.Name lives at @pers.Address </p>
                <a asp-page="./PersonPages/Details" asp-route-userID="@pers.Id" class="card-link btn btn-primary"> Link to PersonPage</a>
                <a asp-page="/Characterpage" asp-route-CharacterId="5" class="card-link btn btn-primary"> Link to Character Sheet </a>
        
           </div>
     </div>
    }
</div>